<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.fxc.shirodemo" use-default-filters="true">
        <!-- spring框架扫描除了@Controller注解修饰外的Bean -->
        <context:exclude-filter type="annotation"
                                expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

    <bean id="myRealm01" class="com.fxc.shirodemo.realms.MyRealm01"/>

    <bean id="firstSuccessfulStrategy" class="org.apache.shiro.authc.pam.FirstSuccessfulStrategy">
        <property name="stopAfterFirstSuccess" value="true"/>
    </bean>
    <bean id="authenticator" class="org.apache.shiro.authc.pam.ModularRealmAuthenticator">
        <property name="authenticationStrategy" ref="firstSuccessfulStrategy"/>
        <property name="realms">
            <list>
                <ref bean="myRealm01"/>
            </list>
        </property>
    </bean>
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
<!--        <property name="realms">-->
<!--            <list>-->
<!--                <ref bean="myRealm01"/>-->
<!--            </list>-->
<!--        </property>-->
        <property name="authenticator" ref="authenticator"/>
    </bean>

    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <property name="securityManager" ref="securityManager"/>
        <property name="filterChainDefinitions">
            <value>
                <!-- 匿名访问 -->
                /doLogin=anon
                <!-- 认证后访问 -->
                /**=authc
            </value>
        </property>
    </bean>
</beans>